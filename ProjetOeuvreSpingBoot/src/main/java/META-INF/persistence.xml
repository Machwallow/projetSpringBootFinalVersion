<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.epul.oeuvre.domains.EntityAdherent</class>
        <class>com.epul.oeuvre.domains.EntityOeuvrepret</class>
        <class>com.epul.oeuvre.domains.EntityOeuvrevente</class>
        <class>com.epul.oeuvre.domains.EntityProprietaire</class>
        <class>com.epul.oeuvre.domains.EntityReservation</class>
        <class>com.epul.oeuvre.domains.EntityUtilisateur</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/baseoeuvre"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value=""/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
